/* CATEGORIES AND INDEXATION SPECIFICATION */

{
	"data":
	[
	    {
			"name":"CaseFile",
			"type":"string",
			"path":["ac:Event.ac:isReferencedBy", "ac:SpecialObject.ac:isReferencedBy", "ac:Media.ac:containedBy"]
		},
	
	    {
			"name":"Description",
		    "type":"text",
		    "path":["ac:Event.ac:Description",
		    		"ac:Art_Work.ac:Title",
		    		"ac:Person.ac:Name",
		        	"ac:Person.ac:Bio",
		    		"ac:Organisation.ac:Name",
		        	"ac:Case-File.ac:references=*.ac:Title",
		    		"ac:Case-File.ac:references=*.ac:tookPlaceAt=ac:City.ac:IsLocatedIn=ac:Country.ac:Name",
		    		"ac:Case-File.ac:references=*.ac:tookPlaceAt=ac:City.ac:Name",
		    		"ac:Case-File.ac:references=*.ac:tookPlaceAt=ac:Country.ac:Name",
		    		"ac:Case-File.ac:references=ac:Event.ac:applicationOf=ac:Role.ac:performedBy=ac:Organisation.ac:Name",
		        	"ac:Case-File.ac:references=ac:Event.ac:applicationOf=ac:Role.ac:performedBy=ac:Person.ac:Name",
		        	"ac:Case-File.ac:references=*.ac:applicationOf=ac:Role.class",
		        	"ac:Case-File.ac:hasMedia=*.ac:hasLanguage=ac:Language.ac:Label",
		        	"ac:Case-File.ac:hasMedia=*.class",
		        	"ac:Case-File.ac:hasMedia=*.ac:isCollectedIn=ac:Collection.class",
		        	"ac:Case-File.ac:references=*.ac:Description",
		        	"ac:Media.ac:Title"
		    ],
		    "search":"yes",
		    "autocomplete":"yes"
		},
	
	    {
	        "name":"ObjectType",
	        "type":"string",
	        "path":["*.class", "*.superclass"],
	        "category":"yes"
	    },

		{
		    "name":"Year",
		    "type":"date.year",
		    "path":[
		        "ac:Case-File.ac:references=*.ac:StartDate",
		        "ac:Case-File.ac:references=*.ac:EndDate"
		    ],
		    "category":"yes",
		    "sortCategory":"yes"
		},

		{
		    "name":"Country",
		    "type":"string",
		    "path":[
		    	"ac:Case-File.ac:references=*.ac:tookPlaceAt=ac:City.ac:IsLocatedIn=ac:Country.ac:Name",
		    	"ac:Case-File.ac:references=*.ac:tookPlaceAt=ac:Country.ac:Name"
		    ],
		    "category":"yes",
		    "multilingual":"yes"
		},
		
		{
			"name":"Translation",
			"type":"string",
			"path":[
			    "ac:Case-File.ac:hasMedia=*.ac:hasLanguage=ac:Language.ac:Label"
			],
			"category":"yes",
			"multilingual":"yes"
		},
		
		{
		    "name":"Media",
		    "type":"string",
		    "path":[
		    	"ac:Case-File.ac:hasMedia=*.class"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"License",
		    "type":"string",
		    "path":[
		        "ac:Case-File.ac:references=*.ac:hasLicense=ac:License.ac:Label"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"Role",
		    "type":"string",
		    "path":[
		        "ac:Case-File.ac:references=*.ac:applicationOf=ac:Role.class"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"Person",
		    "type":"string",
		    "path":[
		        "ac:Case-File.ac:references=ac:Event.ac:applicationOf=ac:Role.ac:performedBy=ac:Person.ac:Name",
		        "ac:Person.ac:Name"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"Organisation",
		    "type":"string",
		    "path":[
		        "ac:Case-File.ac:references=ac:Event.ac:applicationOf=ac:Role.ac:performedBy=ac:Organisation.ac:Name",
		        "ac:Organisation.ac:Name"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"Collection",
		    "type":"string",
		    "path":[
		        "ac:Case-File.ac:hasMedia=*.ac:isCollectedIn=ac:Collection.class"
		    ],
		    "category":"yes"
		},
		
		{
		    "name":"ArtWork",
		    "type":"string",
		    "path":[
		        "ac:Art_Work.ac:Title"
		    ],
		    "category":"yes",
		    "multilingual":"yes"
		},
		
		{
			"name":"AlphabeticalOrder",
		    "type":"string",
		    "path":[
		    	"ac:Case-File.ac:references=*.ac:Title", 
		    	"ac:Art_Work.ac:Title", 
		    	"ac:Person.ac:Name",
		    	"ac:Organisation.ac:Name"
		    ],
		    "sort":"yes"
		},
		
		{
		    "name":"ChronologicalOrder",
		    "type":"date.year",
		    "path":[
		        "ac:Case-File.ac:references=*.ac:StartDate"
		    ],
		    "sort":"yes"
		}
	]
}